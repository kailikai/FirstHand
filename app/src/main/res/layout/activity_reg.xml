<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="reg"
            type="lilin.bwie.com.firsthand.bean.RegisterBean">
        </variable>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/yu_reg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/yuzhilai"/>
    <LinearLayout
        android:id="@+id/zhu"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yu_reg"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/shouji"
            android:text="手机号码"
            />
        <EditText
            android:id="@+id/phone"
            android:layout_width="160dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:hint="+86"
            android:text="@={reg.mobile}"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zhu"
        android:layout_alignParentStart="true"
        android:id="@+id/yan">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/duanxin"
            android:text="短信验证"/>
        <EditText
            android:id="@+id/yanzheng"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:hint="输入您收到的验证码"
            android:text="@={reg.rand}"
            />
        <TextView
            android:id="@+id/huoqu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16dp"
            android:onClick="@{()->reg.OnReg(reg.mobile)}"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yan"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/mima"
            android:text="密码"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="160dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:hint="新密码不少于6位数"
            android:text="@={reg.password}"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="#FF6565"
        android:textSize="20dp"
        android:textColor="#fff"
        android:text="注册"
        android:onClick="@{()->reg.OnCheck(reg.rand,reg.password)}"
        />
</RelativeLayout>
</layout>